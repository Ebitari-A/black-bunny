<%= simple_form_for [@reservation] do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :phone_number %>
  <%= f.input :covers %>
  <%= f.input :reservation_notes %>
  <%= f.input :dietary_requirements %>
  <%= f.submit "Submit", class: "btn btn-success" %>
<% end %>
